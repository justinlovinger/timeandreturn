{
    "compilerOptions": {
        "outDir": "./dist",
        "strict": true,
        "target": "es6",
        "module": "CommonJS", // Node doesn't support es6 modules
        "moduleResolution": "node", // Use node-like module resolution
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "./src/**/*"
    ]
}